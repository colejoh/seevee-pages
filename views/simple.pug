doctype html
html(lang='en')
  head
    meta(charset='utf-8')
    meta(name='description', content='')
    meta(name='keywords', content='')
    meta(name='author', content='')
    title Cole Johnson
    link(rel='stylesheet', type='text/css', href='https://maxcdn.bootstrapcdn.com/font-awesome/4.6.3/css/font-awesome.min.css')
    style.
      html, body {
      width: 100%;
      height: 100vh;
      margin: 0;
      color: #FEFEFE;
      background: #1D7EC6;
      font-family: 'Lato', sans-serif;
      }
      a {
      color: inherit;
      }
      .wassup {
      text-align: center;
      position: relative;
      top: 50%;
      transform: translateY(-50%);
      }
      .name {
      font-size: 60px;
      text-transform: uppercase;
      font-weight: 900;
      font-style: italic;
      }
      .whereami {
      margin: 20px auto;
      width: 500px;
      }
      .links {
      margin-top: 20px;
      }
      .link {
      padding-left: 10px;
      padding-right: 10px;
      }
      .projects {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      min-height: 100vh;
      background: #1D7EC6;
      text-align: center;
      display: none;
      }
      .project-header {
      font-size: 50px;
      text-decoration: underline;
      font-style: italic;
      text-transform: uppercase;
      font-weight: 900;
      }
      .close {
      position: absolute;
      top: 0;
      left: 0;
      width: 70px;
      height: 50px;
      text-align: center;
      line-height: 50px;
      }
      .project {
      margin-top: 50px;
      }
    link(rel='shortcut icon', href='/favicon.ico', type='image/x-icon')
    link(rel='icon', href='/favicon.ico', type='image/x-icon')
    link(href='https://fonts.googleapis.com/css?family=Lato:400,900italic', rel='stylesheet', type='text/css')
    script(type='text/javascript', src='scripts/jquery-3.0.0.min.js')
    script(src='scripts/year.js', type='text/javascript')
  body
    .wassup
      .name #{firstName} #{lastName}
      .whereami
        | Hi, I'm #{firstName}. Right now, I'm a #{workTitle} at #{workOrigin}.
